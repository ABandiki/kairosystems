# ===========================================
# KAIRO - Healthcare Management System
# Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control!

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=kairo
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=kairo
DATABASE_URL="postgresql://kairo:your_secure_password_here@postgres:5432/kairo?schema=public"

# ===========================================
# JWT Authentication
# ===========================================
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# ===========================================
# API Configuration
# ===========================================
PORT=3001
NODE_ENV=production

# ===========================================
# Frontend Configuration
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:3001
WEB_PORT=3000

# ===========================================
# NextAuth Configuration
# ===========================================
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-change-in-production"
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGIN=http://localhost:3000

# ===========================================
# Production Domain (update for production)
# ===========================================
# DOMAIN=kairo.yourdomain.com

# ===========================================
# Redis (optional, for caching)
# ===========================================
# REDIS_URL=redis://localhost:6379

# ===========================================
# S3 Storage (optional, for file uploads)
# ===========================================
# S3_ENDPOINT=http://localhost:9000
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin
# S3_BUCKET=kairo-uploads

# ===========================================
# Email Configuration (optional)
# ===========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@kairo.com
